<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/accountWindow"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/tlo"
        android:orientation="vertical"
        android:textAlignment="center"
    tools:context=".AccountWindowActivity">


    <ImageButton
        android:id="@+id/logoutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:backgroundTint="#D395A8"
        android:layout_gravity="right"
        android:layout_marginTop="6dp"
        android:layout_marginRight="6dp"
        android:text="Wyloguj"
        android:textStyle="bold"
        app:srcCompat="@drawable/log_out" />

    <TextView
        android:id="@+id/accountText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/mbi"
        android:text="Profil"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textColor="#E89B6978"
        android:textSize="36dp"
 />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="129dp"
        android:layout_height="163dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/woman" />


    <TextView
        android:id="@+id/usernameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ml"
        android:textAlignment="center"
        android:text="doe"
        android:textColor="#BD798A"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/lastWeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ml"
            android:text="Ostatnia waga: "
            android:textColor="#C69AA7"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/lastWeightTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ml"
            android:text="waga"
            android:textColor="#BD798A"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/meanCycleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ml"
            android:text="Średni cykl: "
            android:textColor="#C69AA7"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/meanCycle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ml"
            android:text="dlugosc"
            android:textColor="#BD798A"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/meanMenstruationText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ml"
            android:text="Średni cykl: "
            android:textColor="#C69AA7"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.297"
            tools:layout_editor_absoluteX="37dp" />

        <TextView
            android:id="@+id/meanMenstruation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ml"
            android:text="dlugosc"
            android:textColor="#BD798A"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.59"
            app:layout_constraintStart_toEndOf="@+id/lastWeight"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.297" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/contactDoctor"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:backgroundTint="#D1A1AF"
            android:fontFamily="@font/ml"
            android:layout_weight="1"
            android:text="Skontaktuj się z lekarzem" />

        <Button
            android:id="@+id/visitsButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:backgroundTint="#D1A1AF"
            android:fontFamily="@font/ml"
            android:layout_weight="1"
            android:text="Wizyty u lekarza"
            android:textAlignment="center"
            android:textSize="15dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/mapSearch"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:backgroundTint="#D1A1AF"
            android:fontFamily="@font/ml"
            android:text="Znajdź na mapie" />


        <Button
            android:id="@+id/medicationsButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:backgroundTint="#D1A1AF"
            android:fontFamily="@font/ml"
            android:text="Leki"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/endingPregnancyButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:backgroundTint="#D1A1AF"
            android:fontFamily="@font/ml"
            android:text="Początek ciąży"
            android:textSize="15dp" />

        <Button
            android:id="@+id/chatBot"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:backgroundTint="#D1A1AF"
            android:fontFamily="@font/ml"
            android:text="Zapytaj bota"
            android:textSize="15dp" />


    </LinearLayout>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:gravity="bottom"
        android:layout_marginTop="70dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/accountWidnowSettingButton"
            android:layout_width="0dp"
            android:layout_height="58dp"
            android:layout_weight="1"
            android:background="#D1A1AF"
            app:srcCompat="@drawable/settings_fill0_wght400_grad0_opsz24" />

        <ImageButton
            android:id="@+id/homeButtonProfil"
            android:layout_width="0dp"
            android:layout_height="58dp"
            android:layout_weight="1"
            android:background="#D1A1AF"
            app:srcCompat="@drawable/home_fill0_wght400_grad0_opsz24" />


    </LinearLayout>
</LinearLayout>

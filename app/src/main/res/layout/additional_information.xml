<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:textAlignment="center"
    tools:context=".AdditionalInformationActivity"
    android:background="@drawable/tlo">

    <TextView
        android:id="@+id/textAdditionalInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/mbi"
        android:text="Dodatkowe\n informacje"
        android:textColor="#E89B6978"
        android:textSize="36dp" />

    <TextView
        android:id="@+id/addDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textAlignment="center"
        android:text="data"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="10dp">

                <EditText
                    android:id="@+id/enterWeight"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:background="@drawable/round_shape"
                    android:fontFamily="@font/ml"
                    android:gravity="center"
                    android:hint="Waga"
                    android:inputType="text"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black" />

                <EditText
                    android:id="@+id/addInfoEnterTemperature"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:textColorHint="@color/black"
                    android:background="@drawable/round_shape"
                    android:fontFamily="@font/ml"
                    android:hint="Temperatura"
                    android:textColor="@color/black"
                    android:inputType="text"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:layout_marginStart="8dp" />
            </LinearLayout>


    <TextView
        android:id="@+id/textViewSymptoms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ml"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="Symptomy"
        android:textColor="#C69AA7"
        android:textSize="22sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewSymptoms"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="10dp" />

            <TextView
                android:id="@+id/textWarning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ml"
                android:gravity="center"
                android:text="km"
                android:layout_marginBottom="10dp"
                android:textColor="@color/black"
                android:textSize="18dp" />

    <TextView
        android:id="@+id/textMood"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ml"
        android:gravity="center"
        android:text="Ogólne samopoczucie"
        android:layout_marginBottom="10dp"
        android:textColor="#C69AA7"
        android:textSize="22dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="10dp">

        <ImageButton
            android:id="@+id/imageButtonHappy"
            android:layout_width="40dp"
            android:layout_height="37dp"
            android:background="@null"
            android:src="@drawable/happy_emoticon" />


        <ImageButton
            android:id="@+id/imageButtonNeutral"
            android:layout_width="40dp"
            android:layout_height="37dp"
            android:layout_marginStart="8dp"
            android:background="@null"
            android:src="@drawable/neutral_emoticon" />

        <ImageButton
            android:id="@+id/imageButtonSad"
            android:layout_width="40dp"
            android:layout_height="37dp"
            android:layout_marginStart="8dp"
            android:background="@null"
            android:src="@drawable/sad_emoticon" />
    </LinearLayout>


    <TextView
        android:id="@+id/textViewMucus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/ml"
        android:text="Rodzaj śluzu"
        android:textColor="#C69AA7"
        android:textSize="22dp" />


    <Spinner
        android:id="@+id/spinner"
        android:layout_width="300dp"

        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp" />

    <!-- Water Intake Section -->
    <TextView
        android:id="@+id/textViewGlassOfWater"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/ml"
        android:text="Ilość spożytych płynów (250 ml)"
        android:textColor="#C69AA7"
        android:textSize="21sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="10dp">

        <Button
            android:id="@+id/decreaseDrinkButton"
            android:layout_width="54dp"
            android:layout_height="42dp"
            android:backgroundTint="#D1A1AF"
            android:textColor="@color/white"
            android:text="-" />

        <TextView
            android:id="@+id/drinksCountText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:text="0"
            android:textSize="24sp" />

        <Button
            android:id="@+id/increaseDrinkButton"
            android:layout_width="54dp"
            android:layout_height="42dp"
            android:backgroundTint="#D1A1AF"
            android:textColor="@color/white"
            android:text="+" />
    </LinearLayout>


    <Button
        android:id="@+id/buttonSaveAddInfo"
        android:layout_width="95dp"
        android:layout_height="45dp"

        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#D1A1AF"
        android:fontFamily="@font/ml"
        android:text="Zapisz"
        android:textColor="#FFFFFF" />


        </LinearLayout>
    </ScrollView>


    <!-- nawigacja -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:weightSum="3">


        <ImageButton
            android:id="@+id/addInfoSettingButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#D1A1AF"
            android:src="@drawable/settings_fill0_wght400_grad0_opsz24" />

        <ImageButton
            android:id="@+id/homeButtonaddInfo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#D1A1AF"
            android:src="@drawable/home_fill0_wght400_grad0_opsz24" />
        <ImageButton
            android:id="@+id/addInfoSettingAcountButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#D1A1AF"
            android:src="@drawable/account_circle_fill0_wght400_grad0_opsz24" />

    </LinearLayout>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/changePasswordWindow"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginWindowActivity"
    android:background="@drawable/tlo">

    <TextView
        android:id="@+id/changePasswordText"
        android:layout_width="225dp"
        android:layout_height="54dp"
        android:fontFamily="@font/mbi"
        android:text="Zmień hasło"
        android:textAlignment="center"
        android:textColor="#C69AA7"
        android:textSize="38sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.304" />

    <EditText
        android:id="@+id/enterOldPassword"
        android:layout_width="286dp"
        android:layout_height="53dp"
        android:background="@drawable/round_shape"
        android:textColor="@android:color/black"
        android:ems="10"
        android:hint="Obecne hasło"
        android:fontFamily="@font/ml"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textColorHint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.528"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.406" />


    <EditText
        android:id="@+id/enterChangedPassword"
        android:layout_width="286dp"
        android:layout_height="53dp"
        android:background="@drawable/round_shape"
        android:textColor="@android:color/black"
        android:ems="10"
        android:hint="Nowe hasło"
        android:fontFamily="@font/ml"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textColorHint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.528"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.506" />


    <EditText
        android:id="@+id/repeatChangedPassword"
        android:layout_width="294dp"
        android:layout_height="56dp"
        android:background="@drawable/round_shape"
        android:textColor="@android:color/black"
        android:ems="10"
        android:hint="Powtórz nowe hasło"
        android:fontFamily="@font/ml"
        android:inputType="textPassword"
        android:textColorHint="@color/black"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.528"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.60" />

    <Button
        android:id="@+id/buttonConfirmNewPassword"
        android:layout_width="181dp"
        android:layout_height="67dp"
        android:backgroundTint="#D1A1AF"
        android:fontFamily="@font/ml"
        android:text="Potwierdz"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.729" />


</androidx.constraintlayout.widget.ConstraintLayout>
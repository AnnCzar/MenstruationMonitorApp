<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <!-- Główny LinearLayout z orientacją poziomą -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="#E2B6C3"
        android:gravity="center_vertical"> <!-- Wyrównanie elementów w pionie -->

        <!-- ImageButton dla ikony wiadomości -->
        <ImageButton
            android:id="@+id/MessageIcon"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/message"
            android:contentDescription="send message" />


        <!-- Przestrzeń między ikoną a tekstem -->
        <Space
            android:layout_width="16dp"
            android:layout_height="match_parent" />

        <!-- LinearLayout dla tekstu -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical"> <!-- Wyśrodkowanie tekstu w pionie -->

            <TextView
                android:id="@+id/textViewUserLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>

<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main_doctor_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/tlo"
        android:orientation="vertical"
        android:textAlignment="center">

    <TextView
        android:id="@+id/MainDocViewText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="120dp"
        android:fontFamily="@font/mbi"
        android:text="WiadomoÅ›ci"
        android:textAlignment="center"
        android:textColor="#E89B6978"
        android:textSize="36dp" />


    <Spinner
        android:id="@+id/doctorType"
        android:layout_width="342dp"
        android:layout_height="56dp"
        android:layout_gravity="center"
        android:textAlignment="center" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chatUserRV"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        tools:listitem="@layout/chat_list_item" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:weightSum="3">


        <ImageButton
            android:id="@+id/chatUserSettingButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#D1A1AF"
            android:src="@drawable/settings_fill0_wght400_grad0_opsz24" />

        <ImageButton
            android:id="@+id/chatUserHomeButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#D1A1AF"
            android:src="@drawable/home_fill0_wght400_grad0_opsz24" />
        <ImageButton
            android:id="@+id/chatUserAcountButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#D1A1AF"
            android:src="@drawable/account_circle_fill0_wght400_grad0_opsz24" />

    </LinearLayout>

</LinearLayout>

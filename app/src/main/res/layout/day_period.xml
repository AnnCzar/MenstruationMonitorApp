<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dayPeriodLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DayPeriodActivity"
    android:background="@drawable/tlo">

    <TextView
        android:id="@+id/dateDayPeriod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="101dp"
        android:layout_marginTop="142dp"
        android:layout_marginEnd="102dp"
        android:hint="Tu bedzie data"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/cycleDayText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="47dp"
        android:layout_marginEnd="73dp"
        android:layout_marginBottom="8dp"
        android:text="Dzień cyklu:"
        android:textColor="#C69AA7"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/medicineTextDayPeriod"
        app:layout_constraintEnd_toStartOf="@+id/cycleDayPeriod"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/cycleDayPeriod"
        android:layout_width="113dp"
        android:layout_height="46dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="52dp"
        android:background="@drawable/rounded_edit_text"
        android:text="dni"
        android:textAlignment="center"
        android:textColor="@android:color/transparent"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dateDayPeriod" />

    <TextView
        android:id="@+id/medicineTextDayPeriod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="47dp"
        android:layout_marginEnd="178dp"
        android:layout_marginBottom="8dp"
        android:text="Przyjmowane leki"
        android:textAlignment="center"
        android:textColor="#C69AA7"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/medicineCheckboxPeriodDay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/medicineCheckboxPeriodDay"
        android:layout_width="253dp"
        android:layout_height="150dp"
        android:layout_marginEnd="108dp"
        android:layout_marginBottom="36dp"
        android:background="@drawable/rounded_edit_text"
        android:hint="tu będzie checklista z lekami"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/doctorsTextDayPeriod"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/additionalInfoPeriod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="47dp"
        android:layout_marginEnd="103dp"
        android:layout_marginBottom="200dp"
        android:backgroundTint="#D1A1AF"
        android:text="Wprowadź dodatkowe informacje"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/doctorsTextDayPeriod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="192dp"
        android:layout_marginBottom="12dp"
        android:text="Wizyty u lekarza"
        android:textAlignment="center"
        android:textColor="#C69AA7"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/doctorsListPeriod"
        app:layout_constraintEnd_toEndOf="parent" />

    <ListView
        android:id="@+id/doctorsListPeriod"
        android:layout_width="260dp"
        android:layout_height="127dp"
        android:layout_marginEnd="108dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/rounded_edit_text"
        app:layout_constraintBottom_toTopOf="@+id/additionalInfoPeriod"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textViewGlassOfWater"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ilość spożytych płynów (250 ml)"
        android:textAlignment="center"
        android:textColor="#C69AA7"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/additionalInfoPeriod"
        app:layout_constraintVertical_bias="0.116"
        tools:layout_editor_absoluteX="40dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="0"
        android:textSize="24sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="147dp"
        tools:layout_editor_absoluteY="780dp" />

    <Button
        android:id="@+id/buttonPlus"
        android:layout_width="59dp"
        android:layout_height="51dp"
        android:layout_alignBaseline="@id/textView"
        android:layout_marginEnd="176dp"
        android:layout_toLeftOf="@id/textView"
        android:backgroundTint="#D1A1AF"
        android:text="+"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewGlassOfWater"
        app:layout_constraintVertical_bias="0.117" />

    <Button
        android:id="@+id/buttonMinus"
        android:layout_width="61dp"
        android:layout_height="54dp"
        android:layout_alignBaseline="@id/textView"
        android:layout_marginBottom="68dp"
        android:layout_toRightOf="@id/textView"
        android:backgroundTint="#D1A1AF"
        android:text="-"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewGlassOfWater"
        app:layout_constraintVertical_bias="0.363"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="67dp" />


</androidx.constraintlayout.widget.ConstraintLayout>
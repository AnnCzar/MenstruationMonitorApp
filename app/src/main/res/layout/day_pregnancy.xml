<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/day_pregnancy"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DayPregnancyActivity"
    android:background="@drawable/tlo">


    <TextView
        android:id="@+id/dateDayPregnancy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Tu bedzie data"
        android:textColor="@color/black"
        android:fontFamily="@font/ml"
        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.881"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.072" />

    <TextView
        android:id="@+id/pregnancyWeekText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ml"
        android:text="Tydzień ciąży:"
        android:textColor="#C69AA7"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.241"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dateDayPregnancy"
        app:layout_constraintVertical_bias="0.055" />

    <TextView
        android:id="@+id/fetusSizeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ml"
        android:text="Płód jest wielkości:"
        android:textColor="#C69AA7"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.139"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pregnancyWeekText"
        app:layout_constraintVertical_bias="0.066" />

    <ImageView
        android:id="@+id/fetusImageView"
        android:layout_width="160dp"
        android:layout_height="142dp"
        android:layout_gravity="center"
        android:src="@drawable/fetus_default_image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.812"
        app:layout_constraintStart_toEndOf="@+id/fetusSizeText"
        app:layout_constraintTop_toBottomOf="@+id/cycleDayPregnancy"
        app:layout_constraintVertical_bias="0.023" />

    <TextView
        android:id="@+id/cycleDayPregnancy"
        android:layout_width="113dp"
        android:layout_height="46dp"
        android:background="@drawable/rounded_edit_text"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.822"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dateDayPregnancy"
        app:layout_constraintVertical_bias="0.04" />

    <TextView
        android:id="@+id/doctorsTextDayPregnancy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ml"
        android:text="Wizyty u lekarza"
        android:textColor="#C69AA7"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.125"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/medicineDayPregn"
        app:layout_constraintVertical_bias="0.055" />

    <TextView
        android:id="@+id/medicineTextDayPregnancy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ml"
        android:text="Przyjmowane leki"
        android:textColor="#C69AA7"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.131"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fetusSizeText"
        app:layout_constraintVertical_bias="0.151" />

    <Button
        android:id="@+id/additionalInfoPregnancy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#D1A1AF"
        android:fontFamily="@font/ml"
        android:text="Wprowadź dodatkowe\ninformacje"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.144"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/doctorsVisit"
        app:layout_constraintVertical_bias="0.221" />

    <ImageButton
        android:id="@+id/dayPregnancyAcountButton"
        android:layout_width="137dp"
        android:layout_height="58dp"
        android:background="#D1A1AF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/account_circle_fill0_wght400_grad0_opsz24" />

    <ImageButton
        android:id="@+id/dayPregnancySettingButton"
        android:layout_width="137dp"
        android:layout_height="58dp"
        android:background="#D1A1AF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/additionalInfoPregnancy"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/settings_fill0_wght400_grad0_opsz24" />

    <ImageButton
        android:id="@+id/homeButtonCalendar"
        android:layout_width="137dp"
        android:layout_height="58dp"
        android:background="#D1A1AF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/home_fill0_wght400_grad0_opsz24" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/medicineDayPregn"
        android:layout_width="242dp"
        android:layout_height="102dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.171"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/medicineTextDayPregnancy"
        app:layout_constraintVertical_bias="0.0"
        tools:listitem="@layout/medicine_item" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/doctorsVisit"
        android:layout_width="252dp"
        android:layout_height="107dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.182"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/doctorsTextDayPregnancy"
        app:layout_constraintVertical_bias="0.0"
        tools:listitem="@layout/doctor_item" />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dayPregnancyLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DayPregnancyActivity"
    android:background="@drawable/tlo">

    <TextView
        android:id="@+id/dateDayPregnancy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="101dp"
        android:layout_marginTop="142dp"
        android:layout_marginEnd="102dp"
        android:hint="Tu bedzie data"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pregnancyWeekText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="47dp"
        android:layout_marginEnd="73dp"
        android:layout_marginBottom="36dp"
        android:text="Tydzień ciąży:"
        android:textColor="#C69AA7"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/fetusSizeText"
        app:layout_constraintEnd_toStartOf="@+id/cycleDayPregnancy"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/fetusSizeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="47dp"
        android:layout_marginEnd="73dp"
        android:layout_marginBottom="128dp"
        android:text="Płód jest wielkości:"
        android:textColor="#C69AA7"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/medicineTextDayPregnancy"
        app:layout_constraintEnd_toStartOf="@+id/cycleDayPregnancy"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/cycleDayPregnancy"
        android:layout_width="113dp"
        android:layout_height="46dp"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="21dp"
        android:background="@drawable/rounded_edit_text"
        android:text="dni"
        android:textAlignment="center"
        android:textColor="@android:color/transparent"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/fetusSizeText"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/medicineCheckboxPregnancyDay"
        android:layout_width="246dp"
        android:layout_height="109dp"
        android:layout_marginEnd="116dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/rounded_edit_text"
        android:hint="tu będzie checklista z lekami"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/doctorsTextDayPregnancy"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/doctorsTextDayPregnancy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="192dp"
        android:layout_marginBottom="12dp"
        android:text="Wizyty u lekarza"
        android:textAlignment="center"
        android:textColor="#C69AA7"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/doctorsListPregnancy"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/medicineTextDayPregnancy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="47dp"
        android:layout_marginEnd="178dp"
        android:layout_marginBottom="12dp"
        android:text="Przyjmowane leki"
        android:textAlignment="center"
        android:textColor="#C69AA7"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/medicineCheckboxPregnancyDay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <ListView
        android:id="@+id/doctorsListPregnancy"
        android:layout_width="260dp"
        android:layout_height="127dp"
        android:layout_marginEnd="116dp"
        android:layout_marginBottom="42dp"
        android:background="@drawable/rounded_edit_text"
        app:layout_constraintBottom_toTopOf="@+id/additionalInfoPregnancy"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/additionalInfoPregnancy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="52dp"
        android:backgroundTint="#D1A1AF"
        android:text="Wprowadź dodatkowe\ninformacje"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/registerWindow2Doctor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/tlo"
        android:orientation="vertical"
        tools:context=".RegisterWindow2DoctorActivity"
        android:textAlignment="center">

    <TextView
        android:id="@+id/medicineRegisterText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="190dp"
        android:fontFamily="@font/mbi"
        android:text="Zarejestruj się"
        android:textColor="#C69AA7"
        android:textSize="36dp" />

    <EditText
        android:id="@+id/name"
        android:layout_width="294dp"
        android:layout_height="56dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/round_shape"
        android:fontFamily="@font/ml"
        android:hint="Imię i nazwisko"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textColorHint="@color/black" />

    <Spinner
        android:id="@+id/specialisation"
        android:layout_width="291dp"
        android:layout_height="47dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/name"
        tools:layout_editor_absoluteX="61dp" />

    <Button
        android:id="@+id/buttonConfirmRegisterWindow2Doctor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:backgroundTint="#D1A1AF"
        android:fontFamily="@font/ml"
        android:text="Przejdź dalej"
        android:textSize="18dp"
 />

</LinearLayout>
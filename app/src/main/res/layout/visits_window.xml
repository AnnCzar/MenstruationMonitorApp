<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/visitsWindow"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/tlo"
        android:orientation="vertical"
        tools:context=".DoctorVisitsActivity"
        android:textAlignment="center">


    <TextView
        android:id="@+id/visitsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/mbi"
        android:text="Wizyty u lekarza"
        android:layout_gravity="center"
        android:layout_marginTop="120dp"
        android:textAlignment="center"
        android:textColor="#E89B6978"
        android:textSize="36dp"
 />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/visitRV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:layout_gravity="center"

        tools:listitem="@layout/doctor_item" />

    <Button
        android:id="@+id/addVisitButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:backgroundTint="#D1A1AF"
        android:fontFamily="@font/ml"
        android:text="Dodaj wizytÄ™"

        android:textAlignment="center"
        android:textColor="#FFFFFF"
 />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:weightSum="3">


        <ImageButton
            android:id="@+id/accountWidnowSettingButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#D1A1AF"
            android:src="@drawable/settings_fill0_wght400_grad0_opsz24" />

        <ImageButton
            android:id="@+id/homeButtonProfil"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#D1A1AF"
            android:src="@drawable/home_fill0_wght400_grad0_opsz24" />
        <ImageButton
            android:id="@+id/accountButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#D1A1AF"
            android:src="@drawable/account_circle_fill0_wght400_grad0_opsz24" />

    </LinearLayout>

</LinearLayout>